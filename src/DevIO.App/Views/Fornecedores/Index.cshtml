@using DevIO.App.Extensions
@model IEnumerable<DevIO.App.ViewModels.FornecedorViewModel>

@{
    ViewData["Title"] = "Lista de Fornecedores";
}

<div class="d-flex justify-content-between">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary my-auto">Adicionar Fornecedor</a>
</div>

<vc:Summary></vc:Summary>

<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Documento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @this.FormataDocumento(item.TipoFornecedor, item.Documento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>
                <td class="text-right">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info" data-tooltip="tooltip" title="Visualizar Detalhes do Fornecedor" data-placement="bottom"><span class="fa fa-search"></span></a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-info" data-tooltip="tooltip" title="Editar Fornecedor" data-placement="bottom"><span class="fa fa-pencil-alt"></span></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" suppress-by-claim-name="Fornecedores" suppress-by-claim-value="Delete" class="btn btn-outline-info" data-tooltip="tooltip" title="Excluir Fornecedor" data-placement="bottom"><span class="fa fa-trash"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>
