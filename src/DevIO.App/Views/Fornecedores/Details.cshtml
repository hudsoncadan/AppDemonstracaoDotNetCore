@model DevIO.App.ViewModels.FornecedorViewModel

@{
    ViewData["Title"] = "Detalhes sobre " + Model.Nome;
}

<div class="d-flex justify-content-between">
    <h1>@ViewData["Title"]</h1>
    <div class="my-auto">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
        <a href="javascript: window.history.back();" class="btn btn-secondary">Voltar</a>
    </div>
</div>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Documento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Documento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
    </dl>

    <partial name="_EnderecoDetailsTable" />

    <div>
        <h4>Produtos</h4>
        <partial name="../Produtos/_ListaProdutos" model="@Model.Produtos" />
    </div>
</div>
