@model IEnumerable<DevIO.App.ViewModels.ProdutoViewModel>

<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Imagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fornecedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/imagens/@item.Imagem" class="thumbnail-produto"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fornecedor.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @item.Valor.ToString("C")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td class="text-right">
                <a show-by-action="Index,Edit" asp-controller="Produtos" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info" data-tooltip="tooltip" title="Visualizar Detalhes do Produto" data-placement="bottom"><span class="fa fa-search"></span></a>
                <a show-by-action="Index,Edit" asp-controller="Produtos" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-info" data-tooltip="tooltip" title="Editar Produto" data-placement="bottom"><span class="fa fa-pencil-alt"></span></a>
                <a show-by-action="Index,Edit" asp-controller="Produtos" asp-action="Delete" asp-route-id="@item.Id" suppress-by-claim-name="Produtos" suppress-by-claim-value="Delete" class="btn btn-outline-info" data-tooltip="tooltip" title="Excluir Produto" data-placement="bottom"><span class="fa fa-trash"></span></a>
            </td>
        </tr>
}
    </tbody>
</table>